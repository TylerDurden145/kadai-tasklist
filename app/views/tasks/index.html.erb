<% if logged_in? %>
  <h1>タスク一覧</h1>
  <p>ユーザー: <%= current_user.name %></p>
  <ul>
    <% @tasks.each do |task| %>
      <li><%= link_to task.id, task %> : <%= task.content %> &emsp; <%= task.status %></li>
    <% end %>  
  </ul>
  <%= link_to '新規タスクの作成', new_task_path %>
  <%= link_to 'ログアウト', logout_path, method: :delete %>
<% else %>
  <h1>Welcome to the Tasklist</h1>
  <%= link_to '新規登録', signup_path %>
  <%= link_to 'ログイン', login_path %>
<% end %>  